<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer , class:'btn btn-primary'%></td>
        <td><%= link_to beer.style.name, beer.style , class:'btn btn-primary'%></td>
        <td><%= link_to beer.brewery.name, beer.brewery , class:'btn btn-primary'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path, class:'btn btn-primary' if current_user %>