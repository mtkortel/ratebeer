<p id="notice"><%= notice %></p>

<h2>
  <%= @user.username %>
  <% if @user.iced %>
      <div class="label label-info">account frozen</div>
  <%end%>
</h2>

<p>
  Has made <%= pluralize(@user.ratings.count, 'rating') %>
</p>

<% if @user.ratings.any? %>
  <p>Favorite style <%= @user.favorite_style.name %></p>

  <p>Favorite brewery <%= @user.favorite_brewery.name %></p>
<% end %>

<% if @user.beer_clubs.any? %>
  <p>
    Member of
    <% @user.beer_clubs.each do |club| %>
      <%= link_to club.name, club, class:'btn btn-primary' %>
    <% end %>
  </p>
<% else %>
  <p>No club memberships</p>
<% end %>

<ul>
  <% @user.ratings.each do |rating| %>
    <li>
      <%= rating %>
      <% if @user == current_user %>
        <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user.admin %>

    <% if @user.iced %>
        <%= link_to 'reactivate account', froze_user_path(@user), method: :post, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
    <% else %>
      <%= link_to 'froze account', froze_user_path(@user), method: :post, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
    <% end %>
<% end %>

<% if @user == current_user %>
  <%= link_to 'Delete account', @user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
  <%= link_to 'Edit', edit_user_path(@user), class:'btn btn-primary' %>
<% end %>