<p id="notice"><%= notice %></p>

<h2> <%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="label label-info">retired</span>
  <% end %>
</h2>

<em>
  Established at
  <%= @brewery.year %>
</em>

<p>
  Number of beers
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer, class:'btn btn-primary' %>
  <% end %>
</p>

<p>
  <% if @brewery.ratings.empty? %>
    brewery has no ratings
  <% else %>
    brewery has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= number_with_precision(@brewery.average_rating, precision: 1) %>
  <% end %>
</p>
<p>
  <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>
</p>

<%= link_to 'Edit', edit_brewery_path(@brewery), class:'btn btn-primary' if current_user %>
